{
    "name": "@capire/bookshop",
    "version": "1.0.0",
    "description": "A simple self-contained bookshop service.",
    "files": [
        "app",
        "srv",
        "db",
        "index.cds",
        "index.js"
    ],
    "workspaces": [
        "app",
        "app/admin-books"
    ],
    "dependencies": {
        "@sap/cds": "^7.5.3",
        "@sap/cds-dk": "^7.5.1",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
        "@sap/xssec": "^3",
        "express": "^4.18.2",
        "passport": ">=0.7.0",
        "sqlite3": "^5"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.120.2",
        "@wdio/cli": "^8.29.3",
        "@wdio/local-runner": "^8.29.3",
        "@wdio/mocha-framework": "^8.29.3",
        "@wdio/spec-reporter": "^8.29.3",
        "axios": "^1",
        "chai": "^5.0.3",
        "chai-subset": "^1.6.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.5",
        "semver": "^7",
        "wdio-timeline-reporter": "^5.1.4",
        "wdio-ui5-service": "^2.0.6"
    },
    "scripts": {
        "genres": "cds serve test/genres.cds",
        "start": "cds deploy && cds run",
        "watch": "cds watch",
        "undeploy": "cf undeploy capire-bookshop --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources && mbt build -t gen --mtar mta.tar",
        "deploy": "cf deploy gen/mta.tar -f",
        "wdi5": "wdio app/admin-books/webapp/test/wdi5/wdio.conf.js",
        "test-ci": "run-p start wdi5"
    },
    "engines": {
        "node": "^16"
    },
    "cds": {
        "features": {
            "fiori_preview": true,
            "fiori_routes": true
        },
        "requires": {
            "db": "sql",
            "auth": {
                "kind": "dummy"
            },
            "[production]": {
                "db": {
                    "kind": "sqlite",
                    "credentials": {
                        "database": "wdi5.db"
                    }
                },
                "auth": {
                    "kind": "dummy"
                }
            },
            "[development]": {
                "db": {
                    "kind": "sqlite",
                    "credentials": {
                        "database": "wdi5.db"
                    }
                }
            }
        }
    },
    "sapux": [
        "app/admin-books"
    ]
}
